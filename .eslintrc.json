{
  "env": {
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "class-methods-use-this": "off",
    "import/no-unresolved": "off",
    "comma-dangle": ["error", "never"],
    "react/jsx-uses-vars": 2
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["^", "./"]
      ]
    }
  }
}
